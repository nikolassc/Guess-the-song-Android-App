<?xml version="1.0" encoding="utf-8"?>
<!--
    A transition drawable that smoothly transitions between two states
    Used to show the effect of a wrong answer button
-->
<transition xmlns:android="http://schemas.android.com/apk/res/android">

    <!--First state: the button's pressed color-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_pressed" /> <!--Color when button is pressed-->
            <corners android:radius="16dp" /> <!--Rounded corner -->
        </shape>
    </item>

    <!-- Second state: the wrong answer color (red=wrong -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/wrong" /> <!--Color for a wrong answer-->
            <corners android:radius="16dp" /> <!--Rounded corners-->
        </shape>
    </item>

</transition>
