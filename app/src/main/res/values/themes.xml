<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.GSong" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/background</item>
        <item name="colorAccent">@color/button</item>
        <item name="colorOnBackground">@color/text</item>
        <item name="colorBackgroundFloating">@color/background</item>
    </style>


    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>

